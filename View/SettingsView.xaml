<UserControl x:Class="Automatic_Replay_Buffer.View.SettingsView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:viewmodel="clr-namespace:Automatic_Replay_Buffer.ViewModel"
             d:DataContext="{d:DesignInstance Type=viewmodel:SettingsViewModel}"
             mc:Ignorable="d"
             d:DesignWidth="732"
             d:DesignHeight="335"
             Background="White">
    
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="244" />
            <ColumnDefinition Width="244" />
            <ColumnDefinition Width="244" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="275" />
        </Grid.RowDefinitions>

        <Button Content="&lt;"
                HorizontalAlignment="Left"
                VerticalAlignment="Center"
                HorizontalContentAlignment="Center"
                VerticalContentAlignment="Center"
                Width="22"
                Margin="20,0,0,0"
                Command="{Binding HomeViewCommand}" />

        <TextBlock Grid.Column="0"
                   Grid.Row="0"
                   Text="Application"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="18"
                   Margin="10,0,0,0" />

        <Border Grid.Column="0"
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="10"
                Margin="20,0,10,20">

            <StackPanel Orientation="Vertical"
                        Margin="20">
                
                <CheckBox Content="Start with Windows"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          FontSize="16"
                          IsChecked="{Binding StartWithWindows}" />

                <CheckBox Content="Start minimized"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          FontSize="16"
                          Margin="0,10,0,0"
                          IsChecked="{Binding StartMinimized}" />

                <CheckBox Content="Minimize to tray"
                          HorizontalAlignment="Center"
                          VerticalAlignment="Top"
                          HorizontalContentAlignment="Center"
                          VerticalContentAlignment="Center"
                          FontSize="16"
                          Margin="0,10,0,0"
                          IsChecked="{Binding MinimizeToTray}" />
            </StackPanel>
        </Border>

        <TextBlock Grid.Column="1"
                   Grid.Row="0"
                   Text="WebSocket"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="18"
                   Margin="10" />

        <Border Grid.Column="1"
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="10"
                Margin="10,0,10,20">

            <StackPanel Orientation="Vertical"
                        Margin="20">
                
                <StackPanel Orientation="Vertical">
                    
                    <TextBlock Text="Address"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Margin="0,0,0,5"/>

                    <TextBox HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             FontSize="16"
                             Text="{Binding OBSAddress, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">

                    <TextBlock Text="Password"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Margin="0,0,0,5" />

                    <TextBox HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             FontSize="16"
                             Text="{Binding OBSPassword, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>
            </StackPanel>
        </Border>

        <TextBlock Grid.Column="2"
                   Grid.Row="0"
                   Text="Filter"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Center"
                   FontSize="18"
                   Margin="0,10,10,10" />

        <Border Grid.Column="2"
                Grid.Row="1"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                BorderBrush="LightGray"
                BorderThickness="1"
                CornerRadius="10"
                Margin="10,0,20,20">

            <StackPanel Orientation="Vertical"
                        Margin="20">

                <StackPanel Orientation="Vertical">

                    <TextBlock Text="Title"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Margin="0,0,0,5" />

                    <TextBox HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             FontSize="16"
                             Text="{Binding FilterTitle, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">

                    <TextBlock Text="Path"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Margin="0,0,0,5" />

                    <TextBox HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             FontSize="16"
                             Text="{Binding FilterPath, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Orientation="Vertical"
                            Margin="0,10,0,0">

                    <TextBlock Text="Executable"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="16"
                               Margin="0,0,0,5" />

                    <TextBox HorizontalAlignment="Stretch"
                             VerticalAlignment="Center"
                             FontSize="16"
                             Text="{Binding FilterExecutable, UpdateSourceTrigger=PropertyChanged}" />
                </StackPanel>

                <StackPanel Orientation="Horizontal">

                    <Button Content="List"
                            Width="81"
                            FontSize="16"
                            Margin="0,19,0,0"
                            Command="{Binding FilterListViewCommand}"/>

                    <Button Content="Add"
                            Width="81"
                            FontSize="16"
                            Margin="10,19,0,0"
                            Command="{Binding AddFilterCommand}" />
                </StackPanel>
            </StackPanel>
        </Border>
    </Grid>
</UserControl>
