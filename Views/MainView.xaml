<Window x:Class="Automatic_Replay_Buffer.MainView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:Automatic_Replay_Buffer.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        mc:Ignorable="d"
        Title="Automatic Replay Buffer"
        Height="410"
        Width="348"
        SizeToContent="WidthAndHeight"
        ResizeMode="CanMinimize"
        WindowStartupLocation="CenterScreen"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged"
        Icon="/Resources/icon.ico">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="348" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="60" />
            <RowDefinition Height="90" />
        </Grid.RowDefinitions>

        <Grid Grid.Row="0"
              Margin="10,9,10,11">

            <TextBlock Text="Websocket"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Margin="10" />

            <Border Grid.Row="0"
                    HorizontalAlignment="Right"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="10"
                    Margin="0,5,10,5">

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <Rectangle Width="2"
                               Height="20"
                               Fill="{Binding WebsocketBrush}"
                               Margin="10,0,10,0" />

                    <TextBlock Text="{Binding WebsocketText}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Margin="0,0,10,0"
                               Foreground="Black" />
                </StackPanel>
            </Border>
        </Grid>

        <Separator Grid.Row="0"
                   VerticalAlignment="Bottom"
                   Margin="10,10,10,0" />

        <Grid Grid.Row="1"
              Margin="10,9,10,11">

            <TextBlock Text="Monitor"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Margin="10" />

            <Border Grid.Row="0"
                    HorizontalAlignment="Right"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="10"
                    Margin="0,5,10,5">

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <Rectangle Width="2"
                               Height="20"
                               Fill="{Binding MonitorBrush}"
                               Margin="10,0,10,0" />

                    <TextBlock Text="{Binding MonitorText}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Margin="0,0,10,0"
                               Foreground="Black" />
                </StackPanel>
            </Border>
        </Grid>

        <Separator Grid.Row="1"
                   VerticalAlignment="Bottom"
                   Margin="10,10,10,0" />

        <Grid Grid.Row="2"
              Margin="10,9,10,11">

            <TextBlock Text="Token"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Margin="10" />

            <Border Grid.Row="0"
                    HorizontalAlignment="Right"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="10"
                    Margin="0,5,10,5">

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <Rectangle Width="2"
                               Height="20"
                               Fill="{Binding TokenBrush}"
                               Margin="10,0,10,0" />

                    <TextBlock Text="{Binding TokenText}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Margin="0,0,10,0"
                               Foreground="Black" />
                </StackPanel>
            </Border>
        </Grid>

        <Separator Grid.Row="2"
                   VerticalAlignment="Bottom"
                   Margin="10,10,10,0" />

        <Grid Grid.Row="3"
              Margin="10,9,10,11">

            <TextBlock Text="Database"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Margin="10" />

            <Border Grid.Row="0"
                    HorizontalAlignment="Right"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="10"
                    Margin="0,5,10,5">

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <Rectangle Width="2"
                               Height="20"
                               Fill="{Binding DatabaseBrush}"
                               Margin="10,0,10,0" />

                    <TextBlock Text="{Binding DatabaseText}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Margin="0,0,10,0"
                               Foreground="Black" />
                </StackPanel>
            </Border>
        </Grid>

        <Separator Grid.Row="3"
                   VerticalAlignment="Bottom"
                   Margin="10,10,10,0" />

        <Grid Grid.Row="4"
              Margin="10,9,10,11">

            <TextBlock Text="Status"
                       HorizontalAlignment="Left"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Margin="10" />

            <Border Grid.Row="0"
                    HorizontalAlignment="Right"
                    BorderBrush="LightGray"
                    BorderThickness="1"
                    CornerRadius="10"
                    Margin="0,5,10,5">

                <StackPanel Orientation="Horizontal"
                            HorizontalAlignment="Center"
                            VerticalAlignment="Center">

                    <Rectangle Width="2"
                               Height="20"
                               Fill="{Binding StatusBrush}"
                               Margin="10,0,10,0" />

                    <TextBlock Text="{Binding StatusText}"
                               HorizontalAlignment="Center"
                               VerticalAlignment="Center"
                               FontSize="18"
                               Margin="0,0,10,0"
                               Foreground="Black" />
                </StackPanel>
            </Border>
        </Grid>

        <Separator Grid.Row="4"
                   VerticalAlignment="Bottom"
                   Margin="10,10,10,0" />

        <Button Grid.Row="5"
                Content="Settings"
                HorizontalAlignment="Stretch"
                VerticalAlignment="Stretch"
                FontSize="18"
                Margin="20" />

        <!--<ListView Grid.Column="1"
                  Grid.Row="0"
                  ItemsSource="{Binding ActiveGames}"
                  SelectionMode="Extended"
                  Margin="0,20,20,0">

            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Filter Selected"
                              Command="{Binding AddFilterCommand}"
                              CommandParameter="{Binding PlacementTarget.SelectedItems, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                </ContextMenu>
            </ListView.ContextMenu>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title"
                                    DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="Path"
                                    DisplayMemberBinding="{Binding Path}" />
                </GridView>
            </ListView.View>
        </ListView>

        <TextBox x:Name="LogBox"
                 Grid.Column="1"
                 Grid.Row="1"
                 IsReadOnly="True"
                 Text="{Binding LogText, Mode=OneWay}"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,20,20,20" />-->
    </Grid>
</Window>
