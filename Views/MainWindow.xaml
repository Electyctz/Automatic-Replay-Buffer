<Window x:Class="Automatic_Replay_Buffer.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:viewmodel="clr-namespace:Automatic_Replay_Buffer.ViewModel"
        d:DataContext="{d:DesignInstance Type=viewmodel:MainViewModel}"
        mc:Ignorable="d"
        Title=""
        Width="640"
        Height="530"
        MinWidth="640"
        MinHeight="530"
        WindowStartupLocation="CenterScreen"
        ResizeMode="CanResize"
        Loaded="Window_Loaded"
        Closing="Window_Closing"
        StateChanged="Window_StateChanged"
        Icon="/Resources/icon.ico">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="0"
                    Grid.Row="0"
                    Orientation="Vertical"
                    HorizontalAlignment="Stretch"
                    VerticalAlignment="Stretch"
                    Margin="20,20,20,0">

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Padding="10">

                <Grid>
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Text="Websocket"
                               FontSize="18" />

                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Text="{Binding WebsocketText}"
                               FontSize="18"
                               Foreground="{Binding WebsocketBrush}" />
                </Grid>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,-1,0,0"
                    Padding="10">

                <Grid>
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Text="Monitor"
                               FontSize="18" />

                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Text="{Binding MonitorText}"
                               FontSize="18"
                               Foreground="{Binding MonitorBrush}" />
                </Grid>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,-1,0,0"
                    Padding="10">

                <Grid>
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Text="Token"
                               FontSize="18" />

                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Text="{Binding TokenText}"
                               FontSize="18"
                               Foreground="{Binding TokenBrush}" />
                </Grid>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,-1,0,0"
                    Padding="10">

                <Grid>
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Text="Database"
                               FontSize="18" />

                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Text="{Binding DatabaseText}"
                               FontSize="18"
                               Foreground="{Binding DatabaseBrush}" />
                </Grid>
            </Border>

            <Border BorderBrush="Black"
                    BorderThickness="1"
                    Margin="0,-1,0,0"
                    Padding="10">

                <Grid>
                    <TextBlock HorizontalAlignment="Left"
                               VerticalAlignment="Center"
                               Text="Status"
                               FontSize="18" />

                    <TextBlock HorizontalAlignment="Right"
                               VerticalAlignment="Center"
                               Text="{Binding StatusText}"
                               FontSize="18"
                               Foreground="{Binding StatusBrush}" />
                </Grid>
            </Border>
        </StackPanel>

        <ListView Grid.Column="1"
                  Grid.Row="0"
                  ItemsSource="{Binding ActiveGames}"
                  SelectionMode="Extended"
                  Margin="0,20,20,0">

            <ListView.ContextMenu>
                <ContextMenu>
                    <MenuItem Header="Filter Selected"
                              Command="{Binding AddFilterCommand}"
                              CommandParameter="{Binding PlacementTarget.SelectedItems, RelativeSource={RelativeSource AncestorType=ContextMenu}}" />
                </ContextMenu>
            </ListView.ContextMenu>

            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Title"
                                    DisplayMemberBinding="{Binding Title}" />
                    <GridViewColumn Header="Path"
                                    DisplayMemberBinding="{Binding Path}" />
                </GridView>
            </ListView.View>
        </ListView>

        <TextBox x:Name="LogBox"
                 Grid.Column="1"
                 Grid.Row="1"
                 IsReadOnly="True"
                 Text="{Binding LogText, Mode=OneWay}"
                 TextWrapping="Wrap"
                 VerticalScrollBarVisibility="Auto"
                 Margin="0,20,20,20" />

        <StackPanel Grid.Column="0"
                    Grid.Row="1"
                    VerticalAlignment="Bottom"
                    Orientation="Vertical"
                    Margin="20">

            <TextBlock HorizontalAlignment="Center"
                       VerticalAlignment="Center"
                       FontSize="18"
                       Text="{Binding ProgressText}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,10" />

            <ProgressBar Grid.Column="0"
                         Grid.Row="1"
                         Height="30"
                         Minimum="0"
                         Maximum="100"
                         Value="{Binding ProgressValue}"
                         Margin="0,0,0,10" />

            <Button Grid.Column="0"
                    Grid.Row="1"
                    VerticalAlignment="Bottom"
                    Height="40"
                    Content="{Binding ButtonText}"
                    Command="{Binding ButtonCommand}" />
            
        </StackPanel>
    </Grid>
</Window>
